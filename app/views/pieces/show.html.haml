
= image_tag @piece.image.url, { class: "center" } 

- if @piece.name.length > 0
  %p
    %strong Name:
    = @piece.name

- if @piece.description.length > 0
  %p
    %strong Description:
    = @piece.description 

- content_for :admin_menu do
  %li Piece:
  %li= link_to 'Edit', edit_piece_path(@piece)
