%p#notice 
  = notice 

%p
  %strong
  Name:
  = @piece.name

%p
  %strong Description:
  = @piece.description 

%p
  %strong Gallery:
  = @piece.gallery.name

%p
  %strong Image:
  = image_tag @piece.image.url 

%p
  %strong Image(thumb):
  = image_tag @piece.image.url(:thumb) 

- if signed_in? 
  %p
    = link_to 'Sign Out', signout_path, method: "delete"
    |
    = link_to 'Edit', edit_piece_path(@piece)
    |
    = link_to 'Back', pieces_path 
