= form_for @piece, :html => { :multipart => true } do |f|
  - if @piece.errors.any? 
    #error_explanation
      %h2
        = pluralize(@piece.errors.count, "error") 
        prohibited this piece from being saved:

      %ul
        - @piece.errors.full_messages.each do |msg| 
          %li
            = msg 
           
  .field
    = f.label :name 
    %br
    = f.text_field :name 
  
  .field
    = f.label :description 
    %br
    = f.text_field :description 

   
  .field
    = f.label :gallery 
    %br
    = f.select :gallery_id, Gallery.all.collect {|p| [ p.name, p.id ] }
    
  .field
    = f.label :image
    %br
    = f.file_field :image


  .actions
    = f.submit 
  

